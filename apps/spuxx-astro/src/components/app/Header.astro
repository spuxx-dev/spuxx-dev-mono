---
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <HeaderLink href="/" icon="mdi:home" title="Home"/>
    <HeaderLink href="/#blog" icon="mdi:post" title="muh blog I always forget about"/>
    <HeaderLink
      href="https://chaos.social/@spuxx"
      target="_blank"
      icon="mdi:mastodon"
      title="totally not twitter"
    />
    <HeaderLink
      href="https://github.com/spuxx-dev"
      target="_blank"
      icon="mdi:github"
      title="where the code at"
    />
    <HeaderLink
      href="https://buymeacoffee.com/spuxx"
      target="_blank"
      icon="mdi:coffee"
      title="pl-please buy me a coffee senpai uwu"
    />
  </nav>
</header>
<style>
  :root {
    --header-height: 50px;
  }

  header {
    position: fixed;
    height: var(--header-height);
    width: 100vw;
    left: 0;
    display: flex;
    justify-content: center;
    background-color: var(--color-header-background);
    box-shadow: 0px 2px 5px var(--color-header-background);
    overflow: auto;
    z-index: 19;
  }
  nav {
    display: flex;
    height: 100%;
    width: var(--body-width);
    margin: auto;
  }
</style>
