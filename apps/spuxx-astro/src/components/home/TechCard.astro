---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'a'> {
  url: string;
  src: string;
}

const { url, src } = Astro.props;
---

<a href={url} target="_blank" {...Astro.props}>
  <img src={src} />
</a>

<style>
  :root {
    --tech-card-size: 75px;
  }

  a {
    display: flex;
    box-sizing: border-box;
    border: 1px solid;
    border-color: transparent;
    position: relative;
    border-radius: 15px;
    height: var(--tech-card-size);
    width: var(--tech-card-size);
    overflow: hidden;
    align-items: center;
    justify-content: center;
  }

  a:hover {
    transform: translate(-3px, -3px) scale(1.05);
  }

  img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>
