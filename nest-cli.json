{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "sourceRoot": "apps/nest/src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "deleteOutDir": true
  },
  "projects": {
    "spuxx-api": {
      "type": "application",
      "root": "apps/nest",
      "sourceRoot": "apps/nest/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nest/tsconfig.json"
      }
    }
  }
}
